<%= render 'shared/errors',obj: @user %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(@user,:html=>{class: "form-horizontal", role: "form"}) do |f| %>
     	    <div class="form-group">
           <div class= "control-label col-xs-3">
          <%= f.label :username%>
           </div>
           <div class="col-xs-9">
              <%= f.text_field :username,class: "form-control",placeholder: "Enter a Username",autofocus: true %>
           </div>
         </div>
        <div class="form-group">
           <div class= "control-label col-xs-3">
          <%= f.label :email%>
           </div>
           <div class="col-xs-9">
              <%= f.email_field :email,class: "form-control",placeholder: "Enter a email",autofocus: true %>
           </div>
         </div>
         <div class="form-group">
           <div class= "control-label col-xs-3">
          <%= f.label :password%>
           </div>
           <div class="col-xs-9">
              <%= f.password_field :password,class: "form-control",placeholder: "Enter a password",autofocus: true %>
           </div>
          </div> 
          <div class="form-group">
            <div class="col-xs-offset-3 col-xs-9">
            <%= f.submit(@user.new_record? ? "Sign Up": "Update Account",class: "btn btn-primary btn-lg")%>
             </div>
          </div>
    <% end %>
       <div class="text-center">
          <p><%=link_to "Back to Listing Articles" ,articles_path,class:"btn" %></p>
       </div>
  </div>
</div>